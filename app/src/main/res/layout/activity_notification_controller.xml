<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="vm"
            type="kr.open.library.simpleui_xml.system_service_manager.controller.notification.NotificationControllerActivityVm" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TextView.MatchWrap.Bold.Center"
                android:layout_height="60dp"
                android:text="Notification Controller"
                android:textSize="20sp"
                android:gravity="center" />

            <TextView
                style="@style/TextView.MatchWrap.Bold"
                android:layout_marginTop="16dp"
                android:text="Basic Notification"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnShowNotification"
                style="@style/Button.MatchWrap.Normal"
                android:text="Show Notification"
                android:onClick="@{() -> vm.onClickShowNotification()}" />

            <Button
                android:id="@+id/btnShowBigTextNotification"
                style="@style/Button.MatchWrap.Normal"
                android:text="Show BigText Notification"
                android:onClick="@{() -> vm.onClickShowBigTextNotification()}" />

            <TextView
                style="@style/TextView.MatchWrap.Bold"
                android:layout_marginTop="16dp"
                android:text="Progress Notification"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnShowProgress"
                style="@style/Button.MatchWrap.Normal"
                android:text="Show Progress Notification"
                android:onClick="@{() -> vm.onClickShowProgress()}" />

            <Button
                android:id="@+id/btnUpdateProgress50"
                style="@style/Button.MatchWrap.Normal"
                android:text="Update Progress (50%)"
                android:onClick="@{() -> vm.onClickUpdateProgress()}" />

            <Button
                android:id="@+id/btnCompleteProgress"
                style="@style/Button.MatchWrap.Normal"
                android:text="Complete Progress"
                android:onClick="@{() -> vm.onClickCompleteProgress()}" />

            <TextView
                style="@style/TextView.MatchWrap.Bold"
                android:layout_marginTop="16dp"
                android:text="Cancel Notification"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnCancelNotification"
                style="@style/Button.MatchWrap.Normal"
                android:text="Cancel Notification (ID: 1)"
                android:onClick="@{() -> vm.onClickCancelNotification()}" />

            <Button
                android:id="@+id/btnCancelAll"
                style="@style/Button.MatchWrap.Normal"
                android:text="Cancel All Notifications"
                android:onClick="@{() -> vm.onClickCancelAll()}" />

        </LinearLayout>
    </ScrollView>
</layout>
