<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="kr.open.library.simpleui_xml.permissions_origin.PermissionsViewModelOrigin" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Origin Permission Example"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCameraPermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{v -> vm.onClickCameraPermission()}"
            android:text="Camera"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnLocationPermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{v -> vm.onClickLocationPermission()}"
            android:text="GPS"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnMultiplePermissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{v -> vm.onClickMultiplePermissions()}"
            android:text="Multi"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvPermissionResults"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>
</layout>