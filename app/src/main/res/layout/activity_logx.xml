<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="kr.open.library.simpleui_xml.logx.LogxActivityVm" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".logx.LogxActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="logcat 예제"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="버튼을 눌러 Logcat/파일 결과를 확인하세요."
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray" />

            <Button
                android:id="@+id/btnBasicLogging"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:onClick="@{v -> vm.onClickBasicLogging()}"
                android:text="기본 로그 (v/d/i/w/e)" />

            <Button
                android:id="@+id/btnJsonLogging"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:onClick="@{v -> vm.onClickJsonLogging()}"
                android:text="JSON 로그 (j)" />

            <Button
                android:id="@+id/btnParentLogging"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:onClick="@{v -> vm.onClickParentLogging()}"
                android:text="PARENT 로그 (p)" />

            <Button
                android:id="@+id/btnThreadLogging"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:onClick="@{v -> vm.onClickThreadLogging()}"
                android:text="THREAD 로그 (t)" />

            <Button
                android:id="@+id/btnFileLogging"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:onClick="@{v -> vm.onClickFileLogging()}"
                android:text="파일 저장 활성화" />

            <Button
                android:id="@+id/btnStorageConfig"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:onClick="@{v -> vm.onClickStorageConfig()}"
                android:text="스토리지 설정 + PUBLIC_EXTERNAL 예외" />

            <Button
                android:id="@+id/btnTagBlockList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:onClick="@{v -> vm.onClickTagBlockList()}"
                android:text="태그 블록리스트" />

            <Button
                android:id="@+id/btnSkipPackages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:onClick="@{v -> vm.onClickSkipPackages()}"
                android:text="skipPackages 데모" />

            <Button
                android:id="@+id/btnSaveDirectory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:onClick="@{v -> vm.onClickSaveDirectory()}"
                android:text="저장 경로 설정" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="마지막 액션/경로"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvLastAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="대기 중"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>
    </ScrollView>
</layout>
