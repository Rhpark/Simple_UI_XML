<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/TextView.AllWrap.Bold.Center"
            android:layout_marginTop="32dp"
            android:text="권한 요청 예제"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnCameraPermission"
            style="@style/Button.MatchWrap"
            android:layout_marginTop="32dp"
            android:text="카메라 권한 요청"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <Button
            android:id="@+id/btnLocationPermission"
            style="@style/Button.MatchWrap"
            android:layout_marginTop="16dp"
            android:text="위치 권한 요청"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnCameraPermission" />

        <Button
            android:id="@+id/btnStoragePermission"
            style="@style/Button.MatchWrap"
            android:layout_marginTop="16dp"
            android:text="저장소 권한 요청"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLocationPermission" />

        <Button
            android:id="@+id/btnMultiplePermissions"
            style="@style/Button.MatchWrap"
            android:layout_marginTop="16dp"
            android:text="복수 권한 요청"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnStoragePermission" />

        <TextView
            android:id="@+id/tvPermissionStatus"
            style="@style/TextView.MatchWrap.Normal.Center"
            android:layout_marginTop="32dp"
            android:background="@android:color/transparent"
            android:padding="16dp"
            android:text="권한 상태가 여기에 표시됩니다"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnMultiplePermissions" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>