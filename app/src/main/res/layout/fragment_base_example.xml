    android:padding="32dp"
    android:background="#FFEBEE">

    <TextView
        style="@style/TextView.MatchWrap.Bold.Center"
        android:text="BaseFragment Example"
        android:textSize="28sp"
        android:paddingBottom="16dp" />

    <TextView
        style="@style/TextView.MatchWrap.Normal.Center"
        android:text="Click anywhere to change background color!"
